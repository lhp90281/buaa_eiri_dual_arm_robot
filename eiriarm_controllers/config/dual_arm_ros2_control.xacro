<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- 
    ros2_control configuration using Topic-based Hardware Interface
    
    This allows ros2_control to work with your existing MuJoCo simulator
    without modifying the simulator code.
  -->
  <ros2_control name="dual_arm_system" type="system">
    <hardware>
      <!-- Use the topic-based hardware interface bridge -->
      <plugin>eiriarm_controllers/TopicBasedHardwareInterface</plugin>
      
      <!-- Optional: Configure custom topic names (defaults shown) -->
      <param name="joint_state_topic">/joint_states</param>
      <param name="effort_command_topic">/ctrl/effort</param>
    </hardware>
    
    <!-- Left arm joints -->
    <joint name="left_joint_0">
      <command_interface name="effort">
        <param name="min">-50</param>
        <param name="max">50</param>
      </command_interface>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
    
    <joint name="left_joint_1">
      <command_interface name="effort">
        <param name="min">-50</param>
        <param name="max">50</param>
      </command_interface>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
    
